void 館＿やすべ()
{
	array@tagSprite aspSp[3];
	館やすべ_作成(aspSp);
	館やすべ_挨拶();
	int nNo = 0;
	while (true)
	{
		ト書き枠(0, 0);
		'選んでください' B;
		選択追加(1, "「戦国ランス」のこと", -1, -1, -1);
		選択追加(2, "お仕事のこと", -1, -1, -1);
		選択追加(3, "このＣＧのこと", -1, -1, -1);
		選択追加(4, "近況とか", -1, -1, -1);
		選択追加(9, "戻る", -1, -1, -1);
		nNo = 選択(false, 0, 0);
		if (nNo == 0 || nNo == 9)
		{
			break;
		}
		if (nNo == 1)
		{
			館やすべ_ランス７();
		}
		if (nNo == 2)
		{
			館やすべ_仕事();
		}
		if (nNo == 3)
		{
			館やすべ_ＣＧ(aspSp);
		}
		if (nNo == 4)
		{
			館やすべ_近況();
		}
	}
	館やすべ_お別れ();
	館やすべ_削除(aspSp);
	アリスＣＧ();
}

