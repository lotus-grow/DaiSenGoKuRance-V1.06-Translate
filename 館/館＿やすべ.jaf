void 館やすべ_作成(ref array@tagSprite aspSp)
{
	int nW = 800;
	int nH = 284;
	ref tagSprite rfSp;
	rfSp <- aspSp[0];
	rfSp.setCG(10020);
	rfSp.setPos(0, 0);
	rfSp.setZ(1001);
	rfSp <- aspSp[1];
	rfSp.createPixelOnly(nW, nH);
	rfSp.setPos(0, 100);
	rfSp.setZ(1011);
	rfSp <- aspSp[2];
	rfSp.createPixelOnly(nW, nH);
	rfSp.setPos(0, 100);
	rfSp.setZ(1011);
	tagSprite sCg;
	if (sCg.setCG(6003) > 0)
	{
		drawGraph_Copy(aspSp[1], 0, 0, sCg, 0, 10, nW, nH);
		drawGraph_Copy(aspSp[2], 0, 0, sCg, 0, 300, nW, nH);
	}
	画面_クリア();
	館やすべ_表示(aspSp, 1);
	EFFECT(1, 1000, 0);
}

void 館やすべ_削除(ref array@tagSprite aspSp)
{
	int i = 0;
	int cnt = aspSp.Numof();
	for (i = 0; i < cnt; ++i)
	{
		aspSp[i].delete();
	}
}

void 館やすべ_表示(ref array@tagSprite aspSp, int nIndex)
{
	int i = 0;
	int cnt = aspSp.Numof();
	aspSp[0].setShow(1);
	for (i = 1; i < cnt; ++i)
	{
		aspSp[i].setShow(0);
	}
	if (nIndex < 0 || nIndex >= cnt)
	{
		return;
	}
	aspSp[nIndex].setShow(1);
}

