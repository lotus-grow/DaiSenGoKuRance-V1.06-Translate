rgb_t rgb_t(int nR, int nG, int nB)
{
	rgb_t tmp;
	tmp.r = nR;
	tmp.g = nG;
	tmp.b = nB;
	return tmp;
}

pos_t pos_t(int nX, int nY)
{
	pos_t pos;
	pos.x = nX;
	pos.y = nY;
	return pos;
}

size_t size_t(int nWidth, int nHeight)
{
	size_t si;
	si.w = nWidth;
	si.h = nHeight;
	return si;
}

rect_t rect_t(int nX, int nY, int nWidth, int nHeight)
{
	rect_t rc;
	rc.x = nX;
	rc.y = nY;
	rc.w = nWidth;
	rc.h = nHeight;
	return rc;
}

